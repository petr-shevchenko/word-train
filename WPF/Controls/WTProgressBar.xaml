<UserControl x:Class="WordTrain.WTProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">

   <StackPanel x:Name="stackPanel" Orientation="Horizontal">
        <Grid x:Name="barGrid" Width="400">
            <ProgressBar x:Name="progressBar" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="30" Margin="5,0,5,0" Foreground="Orange" />
            <TextBlock  x:Name="textPercent"   HorizontalAlignment="Center" VerticalAlignment="Center"  Text="50%" FontSize="15" FontWeight="Bold" />

            <Label x:Name="textProshlo" Content="Прошло 00:00:00" Margin="10,0,0,0"  VerticalAlignment="Center" HorizontalAlignment="Left" />
            <Label x:Name="textRemaining" Content="Осталось 00:00:00"  Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right" />
        </Grid>
        <Label Grid.Column="1" x:Name="textLabel" Content="Выполняется длительная операция..." Margin="0" VerticalAlignment="Center" HorizontalContentAlignment="Left"/>

  </StackPanel>
   
</UserControl>
